{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Hangfire": "Information",
      "FlightBooking": "Information"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=FlightBookingDb_MohammadDarweesh;Username=postgres;Password=6482297",
    "Hangfire": "Host=localhost;Database=flightbookinghangfire_mohammaddarweesh;Username=postgres;Password=6482297"
  },
  "Hangfire": {
    "ConnectionString": "Host=localhost;Database=flightbookinghangfire_mohammaddarweesh;Username=postgres;Password=6482297",
    "SchemaName": "hangfire",
    "Dashboard": {
      "Enabled": false,
      "Path": "/hangfire",
      "RequireAuthentication": false,
      "RequiredPolicy": "Admin",
      "Title": "Flight Booking Background Jobs - Worker",
      "DarkTheme": true
    },
    "Server": {
      "ServerName": "FlightBooking-Worker-01",
      "WorkerCount": 10,
      "Queues": ["critical", "emails", "reports", "cleanup", "pricing", "default"],
      "ShutdownTimeout": "00:00:30",
      "HeartbeatInterval": "00:00:30",
      "ServerCheckInterval": "00:01:00"
    },
    "Queues": {
      "Critical": {
        "Name": "critical",
        "Priority": 1,
        "MaxWorkers": 3,
        "Timeout": "00:10:00"
      },
      "Emails": {
        "Name": "emails",
        "Priority": 2,
        "MaxWorkers": 4,
        "Timeout": "00:05:00"
      },
      "Reports": {
        "Name": "reports",
        "Priority": 3,
        "MaxWorkers": 2,
        "Timeout": "02:00:00"
      },
      "Cleanup": {
        "Name": "cleanup",
        "Priority": 4,
        "MaxWorkers": 1,
        "Timeout": "01:00:00"
      },
      "Pricing": {
        "Name": "pricing",
        "Priority": 5,
        "MaxWorkers": 2,
        "Timeout": "00:15:00"
      },
      "Default": {
        "Name": "default",
        "Priority": 6,
        "MaxWorkers": 2,
        "Timeout": "00:30:00"
      }
    },
    "Retry": {
      "MaxAttempts": 5,
      "BaseDelaySeconds": 30,
      "MaxDelaySeconds": 3600,
      "BackoffMultiplier": 2.0,
      "EnableJitter": true,
      "JitterFactor": 0.1
    },
    "DeadLetterQueue": {
      "Enabled": true,
      "TableName": "job_dead_letter_queue",
      "RetentionPeriod": "30.00:00:00",
      "EnableAutoCleanup": true,
      "CleanupInterval": "1.00:00:00"
    },
    "Timeouts": {
      "DefaultTimeout": "00:30:00",
      "EmailTimeout": "00:05:00",
      "ReportTimeout": "02:00:00",
      "CleanupTimeout": "01:00:00",
      "PricingTimeout": "00:15:00",
      "CriticalTimeout": "00:10:00"
    }
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Hangfire": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/worker-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  },
  "HealthChecks": {
    "UI": {
      "HealthCheckDatabaseConnectionString": "Host=localhost;Database=FlightBookingDb;Username=postgres;Password=6482297",
      "MaximumHistoryEntriesPerEndpoint": 50,
      "EvaluationTimeInSeconds": 10,
      "MinimumSecondsBetweenFailureNotifications": 60
    }
  },
  "ApplicationInsights": {
    "ConnectionString": ""
  }
}
